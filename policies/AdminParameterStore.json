{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Sid": "sec0",
			"Effect": "Allow",
			"Action": [
				"ssm:PutParameter",
				"ssm:DeleteParameter",
				"ssm:GetParameterHistory",
				"ssm:GetParametersByPath",
				"ssm:GetParameters",
				"ssm:GetParameter",
				"ssm:DeleteParameters"
			],
			"Resource": "arn:aws:ssm:*:*:parameter/*"
		},
		{
			"Sid": "sec1",
			"Effect": "Allow",
			"Action": "ssm:DescribeParameters",
			"Resource": "*"
		}
	]
}